# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all'
gem 'activerecord', '4.2.5' #gives us access to the magical database mapping and association powers
gem 'sinatra-activerecord' #access to some awesome Rake tasks
gem 'rake' #package that lets us quickly create files and folders, and automate tasks such as database creation



group :development do
	gem 'shotgun'
    gem 'pry'
    gem 'tux'
    gem 'sqlite3', '~> 1.3.6'
end

group :test do
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
end
